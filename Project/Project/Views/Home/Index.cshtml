@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="gallery" class="parallax-section">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 col-sm-12 text-center">
                <h1 class="heading">Top Products</h1>
                <hr>
            </div>
            <div class="col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.3s">
                <a href="images/gallery-img1.jpg" data-lightbox-gallery="zenda-gallery"><img src="~/images/gallery-img1.jpg" alt="gallery img"></a>
                <div>
                    <h3>Grinded Red Chilli</h3>
                </div>
                <a href="images/gallery-img2.jpg" data-lightbox-gallery="zenda-gallery"><img src="~/images/gallery-img2.jpg" alt="gallery img"></a>
                <div>
                    <h3>Coconut Crunchy Biscuit</h3>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.6s">
                <a href="images/gallery-img3.jpg" data-lightbox-gallery="zenda-gallery"><img src="~/images/gallery-img3.jpg" alt="gallery img"></a>
                <div>
                    <h3>Soya Mini Chunks</h3>
                </div>
            </div>
            <div class="col-md-4 col-sm-4 wow fadeInUp" data-wow-delay="0.9">
                <a href="images/gallery-img4.jpg" data-lightbox-gallery="zenda-gallery"><img src="~/images/gallery-img4.jpg" alt="gallery img"></a>
                <div>
                    <h3>                      ATTA with Multigrands</h3>
                </div>

                <a href="images/gallery-img5.jpg" data-lightbox-gallery="zenda-gallery"><img src="~/images/gallery-img5.jpg" alt="gallery img"></a>
                <div>
                    <h3>        Johnson's Baby Wipes</h3>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- menu section -->
<section id="menu" class="parallax-section">
    <div class="container">
        <div class="row">
            <div class="col-md-offset-2 col-md-8 col-sm-12 text-center">
                <h1 class="heading"> Our Products</h1>

                <hr>
            </div>
            <table class =" table" align ="center" style="width:70%" border="1">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Stock Available</th>
                    <th>Cart</th>
                </tr>
                @foreach (Product item in ViewBag.products)
                {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td align="center">@Html.ActionLink("Add to Cart", "Cart", "Home", new { id = item.ProductId }, null)</td>
                </tr>
                }
            </table>
            
            
        </div>
    </div>
</section>